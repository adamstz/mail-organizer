# ==============================================================================
# Storage Configuration
# ==============================================================================

# Storage backend type: 'sqlite', 'postgres', or 'memory'
STORAGE_BACKEND=sqlite

# SQLite - Path to database file (only used if STORAGE_BACKEND=sqlite)
STORAGE_DB_PATH=./mail.db

# PostgreSQL - Full connection URL (only used if STORAGE_BACKEND=postgres)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# PostgreSQL - Individual connection parameters (alternative to DATABASE_URL)
# These are used if DATABASE_URL is not set
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=
DB_NAME=

# PostgreSQL - Alternative env var names (also supported)
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_PORT=
POSTGRES_DB=


# ==============================================================================
# LLM Configuration
# ==============================================================================

# LLM provider: 'openai', 'anthropic', 'ollama', 'command', or 'rules' (for testing)
LLM_PROVIDER=ollama

# Model name (required for most providers except 'rules')
LLM_MODEL=gemma:2b

# OpenAI Configuration (only if LLM_PROVIDER=openai)
OPENAI_API_KEY=

# Anthropic Configuration (only if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=

# Ollama Configuration (only if LLM_PROVIDER=ollama)
OLLAMA_HOST=http://localhost:11434

# Custom Command Configuration (only if LLM_PROVIDER=command)
# Command that accepts JSON on stdin and outputs JSON classification
ORGANIZE_MAIL_LLM_CMD=


# ==============================================================================
# Gmail API Configuration
# ==============================================================================

# Google OAuth2 credentials for Gmail API access
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH=

# Gmail Push Notifications (optional, for watch/notifications)
GMAIL_PUBSUB_TOPIC=


# ==============================================================================
# Cloudflare Access (optional, for remote database access)
# ==============================================================================

# Cloudflare Access URL for tunneling to remote PostgreSQL
CLOUDFLARE_ACCESS_URL=

# Local port for cloudflared proxy
LOCAL_PORT=


# ==============================================================================
# Testing Configuration
# ==============================================================================

# Test database URL (used by test suite)
TEST_DATABASE_URL=

# Test database connection parameters (alternative to TEST_DATABASE_URL)
TEST_DB_USER=
TEST_DB_PASSWORD=
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=
